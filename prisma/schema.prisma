// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Promotor {
  id            Int              @id @default(autoincrement())
  nome          String           // Mantemos como 'nome' no schema, mas no banco Ã© 'promotor'
  familia       String?
  horas_sistema String?
  cidade        String?
  uf            String?
  bandeira      String?
  loja          String?
  cargo_campo   String?
  status        String?
  disponibilidades Disponibilidade[]
  selecoes      SelecaoPromotor[]

  @@map("promotores")
}

model Disponibilidade {
  id          Int      @id @default(autoincrement())
  promotor_id Int
  segunda     String   @default("0")
  terca       String   @default("0")
  quarta      String   @default("0")
  quinta      String   @default("0")
  sexta       String   @default("0")
  sabado      String   @default("0")
  domingo     String   @default("0")
  promotor    Promotor @relation(fields: [promotor_id], references: [id])

  @@map("disponibilidades")
}

model Periodo {
  id          Int              @id @default(autoincrement())
  periodo     String
  selecoes    SelecaoPromotor[]

  @@map("periodos")
}

model Cliente {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  telefone    String?
  pedidos     Pedido[]

  @@map("clientes")
}

model Pedido {
  id              Int              @id @default(autoincrement())
  cliente_id      Int
  data_criacao    DateTime         @default(now())
  forma_pagamento String
  status          String
  cliente         Cliente          @relation(fields: [cliente_id], references: [id])
  selecoes        SelecaoPromotor[]

  @@map("pedidos")
}

model SelecaoPromotor {
  id          Int      @id @default(autoincrement())
  pedido_id   Int
  promotor_id Int
  dia_semana  String
  periodo_id  Int
  horas       Int
  valor_hora  Float
  valor_total Float
  pedido      Pedido   @relation(fields: [pedido_id], references: [id])
  promotor    Promotor @relation(fields: [promotor_id], references: [id])
  periodo     Periodo  @relation(fields: [periodo_id], references: [id])

  @@map("selecao_promotores")
}
