// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["promotores"]
}

model Bandeira {
  id        Int     @id @default(autoincrement())
  nome      String
  descricao String?
  lojas     Loja[]

  @@map("bandeiras")
  @@schema("promotores")
}

model Loja {
  id          Int            @id @default(autoincrement())
  bandeira_id Int
  nome        String
  cidade      String
  uf          String
  cep         String?
  bairro      String?
  endereco    String?
  bandeira    Bandeira       @relation(fields: [bandeira_id], references: [id])
  promotores  PromotorLoja[]

  @@map("lojas")
  @@schema("promotores")
}

model Promotor {
  id            Int             @id @default(autoincrement())
  nome          String
  cpf           String?
  familia       String?
  horasistema   String?
  cargo_campo   String?
  status_usuario String?
  disponibilidades Disponibilidade[]
  lojas         PromotorLoja[]
  selecoes      SelecaoPromotor[]

  @@map("promotores")
  @@schema("promotores")
}

model Disponibilidade {
  id          Int      @id @default(autoincrement())
  promotor_id Int
  segunda     Int      @default(0)
  terca       Int      @default(0)
  quarta      Int      @default(0)
  quinta      Int      @default(0)
  sexta       Int      @default(0)
  sabado      Int      @default(0)
  domingo     Int      @default(0)
  promotor    Promotor @relation(fields: [promotor_id], references: [id])

  @@map("disponibilidades")
  @@schema("promotores")
}

model PromotorLoja {
  id          Int      @id @default(autoincrement())
  promotor_id Int
  loja_id     Int
  promotor    Promotor @relation(fields: [promotor_id], references: [id])
  loja        Loja     @relation(fields: [loja_id], references: [id])

  @@map("promotor_loja")
  @@schema("promotores")
}

model Periodo {
  id          Int              @id @default(autoincrement())
  tipo_dia    String
  inicio      DateTime
  fim         DateTime
  descricao   String
  selecoes    SelecaoPromotor[]

  @@map("periodos")
  @@schema("promotores")
}

model ValorPromotorPeriodo {
  id          Int       @id @default(autoincrement())
  promotor_id Int
  periodo_id  Int
  valor_hora  Float
  data_inicio DateTime  @default(now())
  data_fim    DateTime?

  @@map("valores_promotor_periodo")
  @@schema("promotores")
}

model Cliente {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  telefone    String?
  pedidos     Pedido[]

  @@map("clientes")
  @@schema("promotores")
}

model Pedido {
  id              Int              @id @default(autoincrement())
  cliente_id      Int
  data_criacao    DateTime         @default(now())
  forma_pagamento String
  status          String
  cliente         Cliente          @relation(fields: [cliente_id], references: [id])
  selecoes        SelecaoPromotor[]

  @@map("pedidos")
  @@schema("promotores")
}

model SelecaoPromotor {
  id          Int      @id @default(autoincrement())
  pedido_id   Int
  promotor_id Int
  dia_semana  String
  periodo_id  Int
  horas       Int
  valor_hora  Float
  valor_total Float
  pedido      Pedido   @relation(fields: [pedido_id], references: [id])
  promotor    Promotor @relation(fields: [promotor_id], references: [id])
  periodo     Periodo  @relation(fields: [periodo_id], references: [id])

  @@map("selecao_promotores")
  @@schema("promotores")
}
