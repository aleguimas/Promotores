// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bandeira {
  id        Int     @id @default(autoincrement())
  nome      String
  descricao String?
  lojas     Loja[]

  @@map("bandeiras")
}

model Loja {
  id          Int            @id @default(autoincrement())
  bandeira_id Int
  nome        String
  cidade      String
  uf          String
  bandeira    Bandeira       @relation(fields: [bandeira_id], references: [id])
  promotores  PromotorLoja[]

  @@map("lojas")
}

model Promotor {
  id            Int             @id @default(autoincrement())
  nome          String
  cpf           String?
  endereco      String?
  bairro        String?
  cidade        String?
  uf            String?
  cep           String?
  familia       String?
  horasistema   String?
  cargo_campo   String?
  status_usuario String?
  latitude      Float?
  longitude     Float?
  disponibilidades Disponibilidade[]
  lojas         PromotorLoja[]
  selecoes      SelecaoPromotor[]

  @@map("promotores")
}

model Disponibilidade {
  id          Int      @id @default(autoincrement())
  promotor_id Int
  segunda     String   @default("0")
  terca       String   @default("0")
  quarta      String   @default("0")
  quinta      String   @default("0")
  sexta       String   @default("0")
  sabado      String   @default("0")
  domingo     String   @default("0")
  promotor    Promotor @relation(fields: [promotor_id], references: [id])

  @@map("disponibilidades")
}

model PromotorLoja {
  id          Int      @id @default(autoincrement())
  promotor_id Int
  loja_id     Int
  promotor    Promotor @relation(fields: [promotor_id], references: [id])
  loja        Loja     @relation(fields: [loja_id], references: [id])

  @@map("promotor_loja")
}

model Periodo {
  id          Int              @id @default(autoincrement())
  tipo_dia    String
  inicio      String
  fim         String
  descricao   String
  selecoes    SelecaoPromotor[]

  @@map("periodos")
}

model ValorPromotorPeriodo {
  id          Int       @id @default(autoincrement())
  promotor_id Int
  periodo_id  Int
  valor_hora  Float
  data_inicio DateTime  @default(now())
  data_fim    DateTime?

  @@map("valores_promotor_periodo")
}

model Cliente {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  telefone    String?
  pedidos     Pedido[]

  @@map("clientes")
}

model Pedido {
  id              Int              @id @default(autoincrement())
  cliente_id      Int
  data_criacao    DateTime         @default(now())
  forma_pagamento String
  status          String
  cliente         Cliente          @relation(fields: [cliente_id], references: [id])
  selecoes        SelecaoPromotor[]

  @@map("pedidos")
}

model SelecaoPromotor {
  id          Int      @id @default(autoincrement())
  pedido_id   Int
  promotor_id Int
  dia_semana  String
  periodo_id  Int
  horas       Int
  valor_hora  Float
  valor_total Float
  pedido      Pedido   @relation(fields: [pedido_id], references: [id])
  promotor    Promotor @relation(fields: [promotor_id], references: [id])
  periodo     Periodo  @relation(fields: [periodo_id], references: [id])

  @@map("selecao_promotores")
}
